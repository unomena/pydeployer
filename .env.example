# PyDeployer Environment Variables Example

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://deployer:password@localhost:5432/pydeployer

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Deployment Settings
DEPLOYMENT_ROOT=/opt/deployments
DEPLOYMENT_USER=deploy

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Encryption Key for Secrets (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# PyDeployer Self-Management
PYDEPLOYER_REPO=https://gitlab.com/company/pydeployer.git

# Production-specific (for deploy-prod.yaml)
SECRET_DATABASE_URL=postgresql://prod_user:prod_pass@prod-db:5432/pydeployer_prod
SECRET_REDIS_URL=redis://prod-redis:6379/0
SECRET_DJANGO_SECRET_KEY=production-secret-key

# QA-specific (for deploy-qa.yaml)
SECRET_QA_DATABASE_URL=postgresql://qa_user:qa_pass@qa-db:5432/pydeployer_qa
SECRET_QA_REDIS_URL=redis://qa-redis:6379/0
SECRET_QA_DJANGO_SECRET_KEY=qa-secret-key